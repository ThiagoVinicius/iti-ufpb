<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
  
  <!-- Servlets --> 
  <servlet>
    <servlet-name>juizSoletrando</servlet-name>
    <servlet-class>jogoshannon.server.JuizSoletrandoImpl</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>juizSoletrando</servlet-name>
    <url-pattern>/jogo_de_shannon/juizSoletrando</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>criarTabelas</servlet-name>
    <servlet-class>jogoshannon.server.cron.CriaTabelas</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>criarTabelas</servlet-name>
    <url-pattern>/cron/criarTabelas</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>limparTabelas</servlet-name>
    <servlet-class>jogoshannon.server.cron.LimparTabelas</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>limparTabelas</servlet-name>
    <url-pattern>/cron/limparTabelas</url-pattern>
  </servlet-mapping>
  
  	<security-constraint>
        <web-resource-collection>
            <url-pattern>/cron/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>admin</role-name>
        </auth-constraint>
    </security-constraint>
  
  
   <servlet>
        <servlet-name>RemoteApiServlet</servlet-name>
        <servlet-class>com.google.apphosting.utils.remoteapi.RemoteApiServlet</servlet-class>
    </servlet>
    <servlet-mapping>
    	<servlet-name>RemoteApiServlet</servlet-name>
    	<url-pattern>/remote_api</url-pattern>
    </servlet-mapping>
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>RemoteApiServlet</web-resource-name>
            <url-pattern>/remote_api</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>admin</role-name>
        </auth-constraint>
    </security-constraint>
  
  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>Jogo_de_Shannon.html</welcome-file>
  </welcome-file-list>
  
   <session-config>
      <session-timeout>120</session-timeout> 
    </session-config>

</web-app>
