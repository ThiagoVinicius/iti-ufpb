<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:with type="jogoshannon.client.resources.Imagens" field="img" />
	
	<ui:style type="jogoshannon.client.view.ResultadosExibicao.TabelaCss">
		.tituloTabela {
			background-color: #2062B8;
			text-align: center;
			color: white;
			font-style: italic;
		}
		
		.corpoTabela {
			border: 1px solid silver;
			padding: 2px;
			margin-bottom: 6px;
		}
		
		.primeiraColuna {
			background-color: #9900FF;
			text-align: center;
			color: white;
			font-style: italic;
			padding: 0px 4px 0px 4px;
		}
		
		.zeroZero {
			background-color: #FFFFFF;
		}
		
	</ui:style>
	<g:HTMLPanel>
		<g:HorizontalPanel>
			<g:cell>
				<g:Label>Escolha o experimento: </g:Label>
			</g:cell>
			<g:cell>
				<g:ListBox ui:field="listaExperimentos"/>
			</g:cell>
			<g:cell>
				<g:Image ui:field="carregando" resource="{img.ampulheta}"/>
			</g:cell>
		</g:HorizontalPanel>
		
		<g:FlowPanel ui:field="usuarios"></g:FlowPanel>
		
