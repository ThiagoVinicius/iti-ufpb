<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">


	<ui:with type="jogoshannon.client.resources.Imagens" field="img" />

	<ui:style type="jogoshannon.client.view.ResultadosExibicao.TabelaCss">
		.tituloTabela {
			background-color: #2062B8;
			text-align: center;
			color: white;
			font-style: italic;
		}
		
		.corpoTabela {
			border: 1px solid silver;
			padding: 2px;
			margin-bottom: 6px;
		}
		
		.primeiraColuna {
			background-color: #9900FF;
			text-align: center;
			color: white;
			font-style: italic;
			padding: 0px 4px 0px 4px;
		}
		
		.zeroZero {
			background-color: #FFFFFF;
		}
		
		.rotulo_info {
			font-size: 1.2em;
            font-weight: bold;
            color: #888888;
		}
	</ui:style>

	<g:HTMLPanel>
		<g:HorizontalPanel>
			<g:cell>
				<g:Label>Escolha o experimento: </g:Label>
			</g:cell>
			<g:cell>
				<g:ListBox ui:field="listaExperimentos" />
			</g:cell>
			<g:cell>
				<g:Image ui:field="carregando" resource="{img.ampulheta}" />
			</g:cell>
		</g:HorizontalPanel>

		<div>
			<g:VerticalPanel>
				<g:HorizontalPanel spacing="10">
					<g:cell>
						<g:Label styleName="{style.rotulo_info}">
                            Experimento iniciado: &nbsp;</g:Label>
					</g:cell>
					<g:cell>
						<g:Label ui:field="contagemIniciados"></g:Label>
					</g:cell>
					<g:cell>
                        <g:Label>&nbsp; vez(es)</g:Label>
                    </g:cell>
				</g:HorizontalPanel>
				
				<g:HorizontalPanel spacing="10">
                    <g:cell>
                        <g:Label styleName="{style.rotulo_info}">
                            Experimento terminado: &nbsp;</g:Label>
                    </g:cell>
                    <g:cell>
                        <g:Label ui:field="contagemFinalizados"></g:Label>
                    </g:cell>
                    <g:cell>
                        <g:Label>&nbsp; vez(es)</g:Label>
                    </g:cell>
                </g:HorizontalPanel>
				
			</g:VerticalPanel>
		</div>

		<g:Anchor ui:field="mostrarOcultarUsuarios" href="javascript:void(0)" />

		<div />
        
        <g:FlowPanel ui:field="conteinerListaUsuarios" visible="false">
        
        <g:HorizontalPanel spacing="20">
            <g:cell>
                <g:Anchor ui:field="marcarTodos" href="javascript:void(0)">
                    Marcar todos
                </g:Anchor>
            </g:cell>
            <g:cell>
                <g:Anchor ui:field="desmarcarTodos" href="javascript:void(0)">
                    Desmarcar todos
                </g:Anchor>
            </g:cell>
        </g:HorizontalPanel>
        
		<g:FlowPanel ui:field="listaUsuarios" />
		
		</g:FlowPanel>


		<!--

			<g:HorizontalPanel verticalAlignment="ALIGN_MIDDLE"> <g:cell>
			<g:Label>Adicionar ID:&nbsp;</g:Label> </g:cell> <g:cell> <g:TextBox
			ui:field="entradaId"></g:TextBox> </g:cell> <g:cell> <g:Button
			ui:field="botaoAdicionar">Adicionar</g:Button> </g:cell>
			</g:HorizontalPanel>
		-->
		<g:Anchor ui:field="mostrarOcultarTabela" href="javascript:void(0)" />
		<div />
		<g:FlexTable ui:field="tabelaTentativas" />
		<g:SimplePanel ui:field="painelGrafico" />
	</g:HTMLPanel>
</ui:UiBinder> 